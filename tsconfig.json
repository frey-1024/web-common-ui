{
  "compilerOptions": {
    // 严格模式, 强烈建议开启
    "strict": true,
    "baseUrl": "./",
    "outDir": "./dist/",
    "strictNullChecks": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "jsx": "react",
    "module": "esnext",
    "target": "es5",
    "lib": [ // 编译过程中需要引入的库文件的列表
      "es5",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "dom"
    ],
    "paths": {
      "autobest-common-ui": ["src/index"],
      "examples": ["examples"]
    },
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "lib", "es", "examples"]
}
